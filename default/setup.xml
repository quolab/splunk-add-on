<setup>

  <block title="Configure This App">
    <text>Setup QuoLab API endpoint</text>
  </block>

  <block title="Set QuoLab add-on for Splunk"
         endpoint="quolab_server/quolab_serverendpoint" entity="quolab">

    <input field="url">
        <label>API URL (https://hostname.domain:port)</label>
        <type>text</type>
    </input>
    <input field="username">
        <label>username</label>
        <type>text</type>
    </input>
    <input field="token">
        <label>API Token/password for authentication</label>
        <type>text</type>
    </input>

  </block>

</setup>
